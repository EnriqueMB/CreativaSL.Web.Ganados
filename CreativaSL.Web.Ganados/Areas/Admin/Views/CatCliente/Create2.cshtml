@model CreativaSL.Web.Ganados.Models.CatClienteModels
@{
    ViewBag.Title = "Create2";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured{
    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="row">
        <div id="Error" class="progress-bar progress-bar-striped active errorCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div id="Success" class="progress-bar progress-bar-striped active successCSL" style="display:none; width:100%">
            <h3></h3>
        </div>


        <div class="col-md-12">
            @{ Html.EnableClientValidation(false); }
            @using (Html.BeginForm("Create2", "CatCliente", FormMethod.Post, new { @class = "form-horizontal", id = "form-dg", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @*@Html.ValidationSummary(true)*@
                @Html.ValidationSummary(false, "Hay errores en la captura de información:", new { @class = "text-danger" })
                <div id="validation_summary" class="field_error "></div>
                <div class="panel panel-default tabs">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="active"><a href="#tab-first" role="tab" data-toggle="tab">Datos generales</a></li>
                        <li ><a href="#tab-second" role="tab" data-toggle="tab">Datos de contacto</a></li>
                    </ul>
                    <div class="panel-body tab-content">
                        <div class="tab-pane active" id="tab-first">
                            <div class="panel panel-default">
                                <div class="panel-body">

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">Sucursal</label>
                                        <div class="col-md-6 col-xs-12">
                                            @Html.DropDownListFor(model => model.IDSucursal, new SelectList(Model.ListaCmbSucursal, "IDSucursal", "NombreSucursal"), new { id = "IDSucursal", @class = "form-control"})
                                            @Html.ValidationMessageFor(model => model.IDSucursal)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">Razón Social</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBoxFor(model => model.NombreRazonSocial, new { id = "NombreRazonSocial", @class = "form-control", placeholder = "Ingrese la razón social" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.NombreRazonSocial)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">¿Es persona Física?</label>
                                        <div class="col-md-6 col-xs-12">
                                            @Html.CheckBoxFor(model => model.EsPersonaFisica, new { @class = "icheckbox" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">Régimen Fiscal</label>
                                        <div class="col-md-6 col-xs-12">
                                            @Html.DropDownListFor(model => model.IDRegimenFiscal, new SelectList(Model.ListaRegimenCMB, "Clave", "Descripcion"), new { id = "IDRegimenFiscal", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.IDRegimenFiscal)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">RFC</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBoxFor(model => model.RFC, new { id = "RFC", @class = "mask_rfc form-control", placeholder = "Capture el RFC del cliente" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.RFC)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">Domicilio Fiscal</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBoxFor(model => model.Direccion, new { id = "Direccion", @class = "form-control", placeholder = "Dirección del cliente" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Direccion)
                                        </div>
                                    </div>

                                    

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">Fecha de inicio de relación</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                @Html.TextBoxFor(model => model.FechaIngreso, "{0:yyyy/MM/dd}", new { id = "FechaIngreso", @class = "form-control datepicker", @readonly = "readonly" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.FechaIngreso)
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-second">
                            <div class="panel panel-default">
                                <div class="panel-body">

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">Nombre del responsable</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBoxFor(model => model.NombreResponsable, new { id = "NombreResponsable", @class = "form-control", placeholder = "Ingrese el nombre del contacto" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.NombreResponsable)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">Celular </label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBoxFor(model => model.Celular, new { id = "Celular", @class = "mask_phone form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Celular)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">Teléfono </label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBoxFor(model => model.Telefono, new { id = "Telefono", @class = "mask_phone form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Telefono)
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="col-md-2 col-xs-12 control-label">E-mail</label>
                                        <div class="col-md-6 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBoxFor(model => model.CorreoElectronico, new { id = "CorreoElectronico", @class = "form-control", placeholder = "Ingrese el correo electrónico de contacto del cliente" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.CorreoElectronico)
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button form="form-dg" class="btn btn-primary pull-right">Save Changes <span class="fa fa-floppy-o fa-right"></span></button>                        
                    </div>
                </div>
            }
        </div>
    </div>
    <script>
        var message = '@message';
        var typemessage = '@typemessage';        
    </script>
}
@section script{
    <script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type='text/javascript' src="@Url.Content("~/Content/js/plugins/maskedinput/jquery.maskedinput.min.js")"></script>  
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/jquery-validation/jquery.validate.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/clientes.js")"></script>
    <script>
    jQuery(document).ready(function () {
        Mensaje(message, typemessage);
        Clientes.init();
    });
    </script>
}
