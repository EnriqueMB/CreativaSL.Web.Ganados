@model CreativaSL.Web.Ganados.Models.CatProveedorModels

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section css
{
    <!--FILEINPUT-->
    <link href="@Url.Content("~/Content/js/plugins/uploadFiles/fileinput.css")" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    <link href="@Url.Content("~/Content/js/plugins/uploadFiles/theme.css")" rel="stylesheet" />
}
@section featured{

    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="row">
        <div id="Error" class="progress-bar progress-bar-striped active errorCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div id="Success" class="progress-bar progress-bar-striped active successCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div class="col-md-12">
            @*<form class="form-horizontal">*@
            @using (Html.BeginForm("Create", "CatProveedor", FormMethod.Post, new { @class = "form-horizontal", autocomplete = "off", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.IDProveedor)
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Información</strong> Proveedor</h3>
                        <ul class="panel-controls">
                            @*<li><a href="#" class="panel-remove exsa"><span class="fa fa-times"></span></a></li>*@
                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="col-md-3 col-xs-12 control-label">Sucursales</label>
                                <div class="col-md-9 col-xs-12">
                                    @Html.DropDownListFor(model => model.listaSucursal, ViewData["cmbSucursal"] as SelectList, new { id = "ListSucursal", @class = "form-control select" })
                                    @Html.ValidationMessageFor(model => model.listaSucursal)
                                    <span class="help-block">Seleccione la sucursal</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="col-md-3 col-xs-12 control-label">Tipo de proveedor</label>
                                <div class="col-md-9 col-xs-12">
                                   @Html.DropDownListFor(model => model.listaTipoProveedor, ViewData["cmbTipoProveedor"] as SelectList, new { id = "ListTipoProveedor", @class = "form-control select", data_live_search = "true", required = "true" })
                                @Html.ValidationMessageFor(model => model.listaTipoProveedor)
                                    <span class="help-block">Seleccione el tipo de proveedor</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="col-md-3 control-label">Nombre Razón Social</label>
                                <div class="col-md-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.NombreRazonSocial, new { id = "nombreRazonSocial", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.NombreRazonSocial)
                                    <span class="help-block">Ingrese la razón social</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="col-md-3 control-label">RFC</label>
                                <div class="col-md-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.RFC, new { id = "RFC", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.RFC)
                                    <span class="help-block">Ingrese el RFC</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="col-md-3 control-label">Ingrese imagen del (INE)</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.ImgINEE, new { id = "file-es", name = "file-es[]", @type = "file", @class = "form-control"})
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ImgINEE)
                                    <span class="help-block">Ingrese por lo menos 1 imagen.</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="col-md-3 control-label">Ingrese imagen de la (Manifestación Fierro)</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.ImgManifestacionFierros, new { id = "file-esM", name = "file-esM[]", @type = "file", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ImgManifestacionFierros)
                                    <span class="help-block">Ingrese por lo menos 1 imagen.</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <input type="submit" value="Guardar" class="btn btn-primary pull-right">
                        <a href="@Url.Action("Index","CatProveedor")" class="btn btn-danger"><i class="icon-prev"></i>Cancelar</a>
                    </div>
                </div>
                @*</form>*@
            }
        </div>
    </div>
    <script>
        var message = '@message';
        var typemessage = '@typemessage';
    </script>
}
@section script{
<script type="text/javascript" src="@Url.Content("~/Content/js/plugins/uploadFiles/fileinput.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/plugins/uploadFiles/es.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/plugins/uploadFiles/explorer-fa/theme.js")"></script>
<script src="@Url.Content("~/Content/js/plugins/uploadFiles/fa/theme.js")" type="text/javascript"></script>

    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/demo_tables.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>

    <script>
        jQuery(document).ready(function () {
            Mensaje(message, typemessage);
        });

        $('#file-es').fileinput({
            theme: 'fa',
            language: 'es',
            minFileCount: 1,
            showUpload: false,
            showUploadedThumbs: false,
            overwriteInitial: false,
            allowedFileExtensions: ['png']
            @*initialPreview: [
                @for(var i = 0;  i < Model.listaProveedores.Count; i++)
                {
                    <text>
                    '<img class="file-preview-image" style="width: auto; height: auto; max-width: 100%; max-height: 100%;" src="data:image/png;base64, @Model.listaProveedores[i].Imagenes" />'
                    </text>
                    if ((i + 1) != Model.listaProveedores.Count)
                    {
                        <text>
                        ,
                        </text>
                    }
                }
            ],
            initialPreviewConfig: [
                @for (var i = 0 ;  i < Model.listaProveedores.Count; i++)
                {
                    <text>
                    { caption: '@Model.listaProveedores[i].NombreImagen' }
                    </text>

                    if ((i + 1) != Model.listaProveedores.Count)
                    {
                        <text>
                        ,
                        </text>
                    }
                }
            ]*@
        })
        $('#file-esM').fileinput({
            theme: 'fa',
            language: 'es',
            minFileCount: 1,
            overwriteInitial: false,
            showUpload: false,
            showUploadedThumbs: false,
            allowedFileExtensions: ['png']
            @*initialPreview: [
                '<img class="file-preview-image" style="width: auto; height: auto; max-width: 100%; max-height: 100%;" src="data:image/png;base64, @Model.ImgManifestacionFierro" />'
            ],
            initialPreviewConfig: [
                { caption: "Manifestación"}
            ]*@
        })

    </script>
    }

