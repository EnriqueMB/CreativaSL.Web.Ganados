@model CreativaSL.Web.Ganados.Models.VentaGanadosModels

@{
    ViewBag.Title = "Indx";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section css
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/select/1.2.5/css/select.bootstrap.min.css">
    <style>
        table#tblJaulaCheck {
            border: 1px solid black;
        }

            table#tblJaulaCheck thead {
                border: 1px solid black;
                text-align: center;
            }

            table#tblJaulaCheck td:nth-child(1) {
                border-right: 1px solid black;
            }

            table#tblJaulaCheck tbody td {
                padding: 10px 0 0 10px;
            }

        .form-control[disabled],
        .form-control[readonly] {
            color: #000 !important;
        }

        table#tblJaulaP input, table#tblJaulaP {
            text-align: center;
        }

        .marginRow {
            margin-top: 15px !important;
        }
    </style>
}

