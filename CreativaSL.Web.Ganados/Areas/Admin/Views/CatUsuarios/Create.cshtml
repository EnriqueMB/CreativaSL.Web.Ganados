@model CreativaSL.Web.Ganados.Models.UsuarioModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured{

    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="row">
        <div id="Error" class="progress-bar progress-bar-striped active errorCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div id="Success" class="progress-bar progress-bar-striped active successCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div class="col-md-12">
            @*<form class="form-horizontal">*@
            @using (Html.BeginForm("Create", "CatUsuarios", FormMethod.Post, new { @class = "form-horizontal", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.id_usuario)
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Información </strong> nuevo usuario</h3>
                        <ul class="panel-controls">
                            @*<li><a href="#" class="panel-remove exsa"><span class="fa fa-times"></span></a></li>*@
                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="col-md-3 control-label text-left">Nombre Usuario</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.nombre, new { id = "Nombre", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.nombre)
                                    <span class="help-block">Ingrese el nombre del chofer</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="col-md-3 control-label text-left">Apellido Parterno</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.apPat, new { id = "ApPaterno", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.apPat)
                                    <span class="help-block">Ingrese el apellido paterno</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="col-md-3 control-label text-left">Apellido Materno</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.apMat, new { id = "ApMaterno", @class = "form-control" })
                                    </div>
                                    <span class="help-block">Ingrese el apellido materno</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="col-md-3 control-label text-left">Correo</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.email, new { id = "correo", @class = "form-control",@type="email" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.email)
                                    <span class="help-block">Ingrese el correo</span>
                                </div>
                            </div>
                            @*<div class="col-md-6">
                                <label class="col-md-3 control-label">Checkbox</label>
                                <div class="col-md-9">
                                    @Html.CheckBoxFor(model => model.Licencia)
                                </div>
                            </div>*@
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="col-md-3 control-label text-left">Teléfono</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.telefono, new { id = "telefono", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.telefono)
                                    <span class="help-block">Ingrese el Teléfono</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="col-md-3 control-label text-left">Dirección</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.direccion, new { id = "direccion", @class = "form-control" })
                                    </div>
                                   @Html.ValidationMessageFor(model => model.direccion)
                                    <span class="help-block">Ingrese la dirección</span>
                                </div>
                            </div>
                           
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <label class="col-md-3 control-label text-left">Tipo de Usuario</label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.tablaTipoUsuariosCmb, ViewData["cmbUsuarios"] as SelectList, new { id = "ListTipo", @class = "form-control" })
                                    

                                </div>
                                @Html.ValidationMessageFor(model => model.tablaTipoUsuariosCmb)
                            </div>
                            <div class="col-md-4">
                                <label class="col-md-3 control-label text-left">Usuario</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.TextBoxFor(model => model.cuenta, new { id = "clvUser", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.cuenta)
                                    <span class="help-block">Ingrese el nombre de usuario</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="col-md-3 control-label text-left">Contraseña</label>
                                <div class="col-md-9 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.PasswordFor(model => model.password, new { id = "passUser", @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.password)
                                    <span class="help-block">Ingrese su contraseña</span>
                                </div>
                            </div>

                        </div>
                        
                    </div>
                    <div class="panel-footer">
                        <input type="submit" value="Guardar" class="btn btn-primary pull-right">
                        <a href="@Url.Action("Index","CatUsuarios")" class="btn btn-danger"><i class="icon-prev"></i>Cancelar</a>
                    </div>
                </div>
                @*</form>*@
            }
        </div>
    </div>
    <script>
        var message = '@message';
        var typemessage = '@typemessage';
    </script>
}
@section script{
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/demo_tables.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>

    <script>
    jQuery(document).ready(function () {
        $('#Licencia').change(function () {
            $('#licencia-cont').toggle(1000);
        });
        Mensaje(message, typemessage);
    });
    </script>
}

