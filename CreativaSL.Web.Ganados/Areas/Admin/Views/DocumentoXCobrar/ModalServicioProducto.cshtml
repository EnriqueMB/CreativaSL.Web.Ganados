@model CreativaSL.Web.Ganados.Models.DocumentosPorCobrarDetalleModels

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Registrar Cobro</h4>
    </div>
    <div class="modal-body">
        <!--INICIA CUERPO MODAL-->
        @using (Html.BeginForm("AC_ServicioProducto", "DocumentoXCobrar", FormMethod.Post, new { id= "AC_ServicioProducto", @class = "form-horizontal", autocomplete = "off" }))
        {

            <div class="form-group">
                <div class="col-md-5">
                    <label class="col-md-2 control-label">Asignar:</label>
                    <div class="controls">
                        <div class="col-md-10 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.DropDownListFor(model => model.Id_documentoCobrar, new SelectList(Model.ListaAsignar, "Id", "Descripcion"), new { @class = "form-control select", data_live_search = "true", data_style = "form-control" })
                            </div>
                            <span class="help-block">Asignar pago.</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <label class="col-md-3 control-label">Producto o servicio:</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.DropDownListFor(model => model.Id_productoServicio, new SelectList(Model.ListaProductosServiciosCFDI, "Clave", "Descripcion"), new { @class = "form-control select", data_live_search = "true", data_style = "form-control" })
                            </div>
                            <span class="help-block">Producto o servicio.</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label class="col-md-3 control-label">Cantidad:</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.Cantidad, new { @class = "form-control" })
                            </div>
                            <span class="help-block">Cantidad.</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="col-md-3 control-label">Precio unitario:</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.PrecioUnitario, new { @class = "form-control" })
                            </div>
                            <span class="help-block">Precio unitario.</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="col-md-3 control-label">Subtotal:</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.Subtotal, new { @class = "form-control" })
                            </div>
                            <span class="help-block">Subtotal.</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group modal-footer">
                <div class="controls">
                    <button type="submit" class="btn btn-success green">Guardar</button>
                    <button type="button" class="btn btn-secondary red" data-dismiss="modal">Cancelar</button>
                </div>
            </div>

        }
        <!--TERMINA CUERPO MODAL-->
    </div>
</div>

