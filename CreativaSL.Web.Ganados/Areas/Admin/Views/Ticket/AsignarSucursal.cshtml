@{
    ViewBag.Title = "Asignar sucursal";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var idSucursal = ViewBag.IdSucursalAsignada;
    var listaSucursales = ViewBag.ListaSucursales as List<CreativaSL.Web.Ganados.Models.CatSucursalesModels>;
}
@section featured{

    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="row">
        <div id="Error" class="progress-bar progress-bar-striped active errorCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div id="Success" class="progress-bar progress-bar-striped active successCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div class="col-md-12">
            @using (Html.BeginForm("AsignarSucursal", "Ticket", FormMethod.Post, new { @class = "form-horizontal", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Por favor asigne una sucursal al equipo.</h3>
                        <ul class="panel-controls">
                            <li>
                                <a href="@Url.Action("AsignarSucursal", "Ticket")" class="btn btn-default btnCrear">
                                    <span class="fa fa-building-o">
                                    </span> ¿Actualizar todos los tickets?
                                </a>
                            </li>
                            <li><a href="#" class="panel-collapse exsa"><span class="fa fa-angle-down"></span></a></li>
                            <li><a href="#" class="panel-fullscreen exsa"><span class="fa fa-expand"></span></a></li>
                        </ul>
                    </div>

                    <div class="panel-body">

                        @foreach (var sucursal in listaSucursales)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="radio"
                                           name="sucursales"
                                           value="@sucursal.IDSucursal"
                                           @if (listaSucursales != null && listaSucursales.Count != 0 &&
                                                sucursal.IDSucursal == idSucursal)
                                           {
                                               <text> checked </text>
                                           } /> @sucursal.NombreSucursal
                                    </label>
                                </div>
                            }
                    </div>
                    <div class="panel-footer">
                        <input type="submit" value="Guardar" class="btn btn-primary pull-right">
                        <a href="@Url.Action("Index", "Ticket")" class="btn btn-danger"><i class="icon-prev"></i>Regresar</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <script>
        var message = '@message';
        var typemessage = '@typemessage';
    </script>

}
@section script{
    <script type='text/javascript' src='@Url.Content("~/Content/js/plugins/icheck/icheck.min.js")'></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/demo_tables.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>
    <script>
        jQuery(document).ready(function () {
            Mensaje(message, typemessage);
        });
    </script>
}