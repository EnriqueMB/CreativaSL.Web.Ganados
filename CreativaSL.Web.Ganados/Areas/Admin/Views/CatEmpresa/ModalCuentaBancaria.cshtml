
@model CreativaSL.Web.Ganados.Models.CatEmpresaModels

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Cuenta bancaria</h4>
    </div>
    <div class="modal-body">
        <!--INICIA CUERPO MODAL-->
        <form id="frmModalCuentaBancaria" class="form-horizontal">
            <div id="validation_summary_cuentaBancaria" class="field_error "></div>
            @Html.HiddenFor(model => model.CuentaBancaria.IDDatosBancarios)
            @Html.HiddenFor(model => model.IDEmpresa)
            <div class="form-group">
                <div class="col-md-8">
                    <label class="col-md-3 control-label" for="titular">Titular</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CuentaBancaria.Titular, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CuentaBancaria.Titular)
                            <span class="help-block">Titular de la cuenta.</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="col-md-2 control-label" for="banco">Banco</label>
                    <div class="controls">
                        <div class="col-md-10 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.DropDownListFor(model => model.Banco.IDBanco, new SelectList(Model.ListaBancos, "IDBanco", "Descripcion"), new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Banco.IDBanco)
                            <span class="help-block">Seleccione el banco.</span>
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-12">
                    <label class="col-md-2 control-label" for="NumCuenta">Núm. de cuenta</label>
                    <div class="controls">
                        <div class="col-md-10 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CuentaBancaria.NumCuenta, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CuentaBancaria.NumCuenta)
                            <span class="help-block">Ingrese el número de cuenta.</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <label class="col-md-2 control-label" for="NumTarjeta">Núm. de tarjeta</label>
                    <div class="controls">
                        <div class="col-md-10 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CuentaBancaria.NumTarjeta, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CuentaBancaria.NumTarjeta)
                            <span class="help-block">Ingrese el número de tarjeta.</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <label class="col-md-2 control-label" for="NumClabeInter">Núm. de clabe interbancaria</label>
                    <div class="controls">
                        <div class="col-md-10 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CuentaBancaria.Clabe, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CuentaBancaria.Clabe)
                            <span class="help-block">Ingrese la clabe interbancaria.</span>
                        </div>
                    </div>
                </div>
            </div>



            <div class="form-group modal-footer">
                <div class="controls">
                    <button type="button" class="btn btn-success green" id="AC_CuentaBancaria">Guardar</button>
                    <button type="button" class="btn btn-secondary red" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </form>
        <!--TERMINA CUERPO MODAL-->
    </div>
</div> 