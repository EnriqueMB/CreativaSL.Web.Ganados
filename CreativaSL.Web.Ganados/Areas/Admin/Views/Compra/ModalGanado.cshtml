@model CreativaSL.Web.Ganados.Models.CompraModels

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Ganado</h4>
    </div>
    <div class="modal-body">
        <!--INICIA CUERPO MODAL-->
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-md-6">
                    <label class="col-md-3 control-label" for="numArete">Número de arete</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.Ganado.numArete, new { id = "numArete", @class = "form-control", disabled = "disabled" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Ganado.numArete)
                            <span class="help-block">Número de arete.</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="col-md-3 control-label" for="selectGenero">Género</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                <select class="form-control">
                                    <option value="MACHO" selected>MACHO</option>
                                    <option value="HEMBRA">HEMBRA</option>
                                </select>
                            </div>
                            <span class="help-block">Seleccione el género del ganado.</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <label class="col-md-3 control-label" for="PesoInicial">Peso inicial</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CompraGanado.PesoInicial, new { id = "PesoInicial", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CompraGanado.PesoInicial)
                            <span class="help-block">Ingrese el peso inicial.</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="controls">
                        <div class="col-md-12 col-xs-12">
                            <div class="input-group">
                                <label class="check">@Html.CheckBoxFor(modal => modal.Ganado.Repeso, new { @class= "icheckbox" }) checked="checked" /> ¿Repeso?</label>
                                <span class="help-block">En caso que no lo hallan pesado en Grupo Ocampo</span>
                            </div>
                        </div>
                    </div>
                </div>
                

                <div id="pFinal" class="col-md-5">
                    <label class="col-md-3 control-label" for="PesoFinal">Peso final</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CompraGanado.PesoFinal, new { id = "PesoFinal", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CompraGanado.PesoFinal)
                            <span class="help-block">Ingrese el peso final.</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <label class="col-md-3 control-label" for="DiferenciaPeso">Diferencia de peso</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CompraGanado.DiferenciaPeso, new { id = "DiferenciaPeso", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CompraGanado.PesoInicial)
                            <span class="help-block">Ingrese el peso inicial.</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="controls">
                        <div class="col-md-12 col-xs-12">
                            <div class="input-group">
                                <label class="check">@Html.CheckBoxFor(modal => modal.Ganado.Repeso, new { @class = "icheckbox" }) checked="checked" /> ¿Repeso?</label>
                                <span class="help-block">En caso que no lo hallan pesado en Grupo Ocampo</span>
                            </div>
                        </div>
                    </div>
                </div>


                <div id="pFinal" class="col-md-5">
                    <label class="col-md-3 control-label" for="selectGenero">Peso final</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CompraGanado.PesoFinal, new { id = "inputPesoFinal", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CompraGanado.PesoFinal)
                            <span class="help-block">Ingrese el peso final.</span>
                        </div>
                    </div>
                </div>
            </div>
           
            
            
            
            
            
            
             <div class="form-group">
                <div class="col-md-6">
                    <label class="col-md-3 control-label" for="DifPeso">Dif. de peso </label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.Ganado.numArete, new { id = "NumArete", @class = "form-control", disabled = "disabled" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Ganado.numArete)
                            <span class="help-block">Número de arete.</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="col-md-3 control-label" for="selectGenero">Género</label>
                    <div class="controls">
                        <div class="col-md-9 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                <select class="form-control">
                                    <option value="MACHO" selected>MACHO</option>
                                    <option value="HEMBRA">HEMBRA</option>
                                </select>
                            </div>
                            <span class="help-block">Seleccione el género del ganado.</span>
                        </div>
                    </div>
                </div>
            </div>
            
            
            
             <div class="form-group">
                <label class="col-md-3 control-label" for="inputDifPeso">Diferencia de Peso (kg.)</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.CompraGanado.DiferenciaPeso, new { id = "inputDifPeso", @class = "form-control"})
                        </div>
                        @Html.ValidationMessageFor(model => model.CompraGanado.DiferenciaPeso)
                        <span class="help-block">Diferencia de Peso (kg.).</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="inputMermaObtenida">Merma obtenida</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.CompraGanado.Merma, new { id = "inputMermaObtenida", @class = "form-control", @Value = "0", disabled = "disabled" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CompraGanado.Merma)
                        <span class="help-block">Merma Obtenida.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPrecioSugeridoPorPeso">Precio sugerido por kilo</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.CompraGanado.PesoPagado, new { id = "inputPrecioSugeridoPorPeso", @class = "form-control", @Value = "0", disabled = "disabled" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CompraGanado.PesoPagado)
                        <span class="help-block">Precio sugerido.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPrecioPagadoPorKilo">Precio pagado por kilo</label>
                <div class="controls">

                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.CompraGanado.PrecioKilo, new { id = "inputPrecioPagadoPorKilo", @class = "form-control", disabled = "disabled" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CompraGanado.PrecioKilo)
                        <span class="help-block">Precio pagado por kilo.</span>
                    </div>
                </div>
            </div>

            <div class="form-group modal-footer">
                <div class="controls">
                    <button type="submit" class="btn btn-success green">Registrar ganado</button>
                    <button type="button" class="btn btn-secondary red" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </form>
        <!--TERMINA CUERPO MODAL-->
    </div>
</div> 