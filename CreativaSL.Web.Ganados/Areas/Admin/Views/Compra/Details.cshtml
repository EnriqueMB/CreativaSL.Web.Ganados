    <script type="text/javascript" src="@Url.Content("~/Content/js/compra.js")"></script>

    <script>
        jQuery(document).ready(function () {
            var IDCompra = $("#IDCompra").val();

            var tbl_generalGanado = $('#tbl_generalGanado').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                },
                responsive: true,
                "ajax": {
                    "data": {
                        "IDCompra": IDCompra
                    },
                    "url": "/Admin/Compra/JsonGeneralesGanado/",
                    "type": "POST",
                    "datatype": "json",
                    "dataSrc": ''
                },
                "columns": [
                    { "data": "genero" },
                    { "data": "totalGanado" },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            var totalPeso = row["kilosTotalPesoInicial"];
                            return totalPeso + ' kg.'
                        }
                    },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            var totalRepeso = row["kilosTotalRepeso"];
                            return totalRepeso + ' kg.'
                        }
                    },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            var merma = row["mermaPromedio"];
                            return merma.toFixed(2) + ' %';
                        }
                    },
                    {  
                        "data": "subtotal",
                        "render": $.fn.dataTable.render.number(',', '.', 2, '$'),
                    }, 
                ]
            });

            Mensaje(message, typemessage);
        });
    </script>
}
