@model CreativaSL.Web.Ganados.Models.CompraModels

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Evento durante la compra</h4>
    </div>
    <div class="modal-body">
        <!--INICIA CUERPO MODAL-->
        @using (Html.BeginForm("Edit", "CatCliente", FormMethod.Post, new { @class = "form-horizontal", id = "form-dg", autocomplete = "off" }))
        {

            <div class="form-group">
                <div class="col-md-12">
                    <label class="col-md-1 control-label" for="numArete">Lugar:</label>
                    <div class="controls">
                        <div class="col-md-11 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CompraGanado.PrecioKilo, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Ganado.numArete)
                            <span class="help-block">Tipo o clásificación del pago.</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6">
                    <label class="col-md-2 control-label" for="numArete">Fecha:</label>
                    <div class="controls">
                        <div class="col-md-10 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CompraGanado.PrecioKilo, new { @class = "form-control", @type="date"})
                            </div>
                            @Html.ValidationMessageFor(model => model.Ganado.numArete)
                            <span class="help-block">Fecha del movimientos.</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="col-md-2 control-label" for="numArete">Hora:</label>
                    <div class="controls">
                        <div class="col-md-10 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextBoxFor(model => model.CompraGanado.PrecioKilo, new { @class = "form-control", @type = "time" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Ganado.numArete)
                            <span class="help-block">Hora del movimiento.</span>
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-12">
                    <label class="col-md-1 control-label" for="PesoInicial">Nota</label>
                    <div class="controls">
                        <div class="col-md-11 col-xs-12">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                @Html.TextArea("Description", null, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.CompraGanado.PesoInicial)
                            <span class="help-block">Nota u observación.</span>
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group modal-footer">
                <div class="controls">
                    <button type="submit" class="btn btn-success green">Registrar movimiento</button>
                    <button type="button" class="btn btn-secondary red" data-dismiss="modal">Cancelar</button>
                </div>
            </div>

        }
        <!--TERMINA CUERPO MODAL-->
    </div>
</div>

