
@model CreativaSL.Web.Ganados.Models.GanadosModels

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Renta de equipo, propiedad de Grupo Ocampo</h4>
    </div>
    <div class="modal-body">
        <!--INICIA CUERPO MODAL-->
        <!--INICIA FORM-->
        <form class="form-horizontal">
            <h5>Vehículos</h5>
            <div class="form-group">
                <label class="col-md-3 control-label" for="selectGenero">Nombre del vehiculo</label>
                <div class="col-md-9 col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                        <select class="form-control">
                            <option>Macho</option>
                            <option>Hembra</option>
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.numArete)
                    <span class="help-block">Seleccione el vehículo.</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPesoInicial">Precio</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.observacion, new { id = "inputPesoInicial", @class = "form-control", @Value = "0" })
                        </div>
                        @Html.ValidationMessageFor(model => model.observacion)
                        <span class="help-block">Ingrese el precio de la renta del vehículo.</span>
                    </div>
                </div>
            </div>

            <h5>Remolques</h5>
            <div class="form-group">
                <label class="col-md-3 control-label" for="selectGenero">Nombre del remolque</label>
                <div class="col-md-9 col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                        <select class="form-control">
                            <option>Macho</option>
                            <option>Hembra</option>
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.numArete)
                    <span class="help-block">Seleccione el remolque.</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPesoInicial">Precio</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.observacion, new { id = "inputPesoInicial", @class = "form-control", @Value = "0" })
                        </div>
                        @Html.ValidationMessageFor(model => model.observacion)
                        <span class="help-block">Ingrese el precio de la renta del remolque.</span>
                    </div>
                </div>
            </div>

            <h5>Jaulas</h5>
            <div class="form-group">
                <label class="col-md-3 control-label" for="selectGenero">Nombre de la jaula</label>
                <div class="col-md-9 col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                        <select class="form-control">
                            <option>Macho</option>
                            <option>Hembra</option>
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.numArete)
                    <span class="help-block">Seleccione la jaula.</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPesoInicial">Precio</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.observacion, new { id = "inputPesoInicial", @class = "form-control", @Value = "0" })
                        </div>
                        @Html.ValidationMessageFor(model => model.observacion)
                        <span class="help-block">Ingrese el precio de la renta de la jaula.</span>
                    </div>
                </div>
            </div>
            <!--INICIA FOOTER DEL MODAL-->
            <div class="form-group modal-footer">
                <div class="controls">
                    <button type="submit" class="btn btn-success green">Dar de alta</button>
                    <button type="button" class="btn btn-secondary red" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
            <!--TERMINA FOOTER DEL MODAL-->
        </form>
        <!--TERMINA FORM-->
        <!--TERMINA CUERPO MODAL-->
    </div>
</div>
