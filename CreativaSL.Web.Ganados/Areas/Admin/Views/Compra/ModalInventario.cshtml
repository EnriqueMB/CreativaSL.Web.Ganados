
@model CreativaSL.Web.Ganados.Models.GanadosModels

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Inventario actual</h4>
    </div>
    <div class="modal-body">
        <!--INICIA CUERPO MODAL-->
        <!--INICIA FORM-->
        <form class="form-horizontal">

            <div class="form-group">
                <label class="col-md-3 control-label" for="selectGenero">Producto</label>
                <div class="col-md-9 col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                        <select class="form-control">
                            <option>Macho</option>
                            <option>Hembra</option>
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.numArete)
                    <span class="help-block">Seleccione el producto.</span>
                </div>
            </div>

            
            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPesoInicial">Cantidad</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.observacion, new { id = "inputPesoInicial", @class = "form-control", @Value = "0" })
                        </div>
                        @Html.ValidationMessageFor(model => model.observacion)
                        <span class="help-block">Ingrese la cantidad del producto.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPesoInicial">Precio unitario</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.observacion, new { id = "inputPesoInicial", @class = "form-control", @Value = "0" })
                        </div>
                        @Html.ValidationMessageFor(model => model.observacion)
                        <span class="help-block">Ingrese el precio unitario.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPesoInicial">Observación</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextAreaFor(model => model.observacion, new { id = "areaObservacion", @class = "form-control areaObservacion", @Value = "0"})
                        </div>
                        @Html.ValidationMessageFor(model => model.observacion)
                        <span class="help-block">El subtotal es.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label" for="inputPesoInicial">Subtotal</label>
                <div class="controls">
                    <div class="col-md-9 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            @Html.TextBoxFor(model => model.observacion, new { id = "inputPesoInicial", @class = "form-control", @Value = "0" , disabled = "disabled"})
                        </div>
                        @Html.ValidationMessageFor(model => model.observacion)
                        <span class="help-block">El subtotal es.</span>
                    </div>
                </div>
            </div>
            <!--INICIA FOOTER DEL MODAL-->
            <div class="form-group modal-footer">
                <div class="controls">
                    <button type="submit" class="btn btn-success green">Dar de alta</button>
                    <button type="button" class="btn btn-secondary red" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
            <!--TERMINA FOOTER DEL MODAL-->
        </form>
        <!--TERMINA FORM-->
        <!--TERMINA CUERPO MODAL-->
    </div>
</div>