@model CreativaSL.Web.Ganados.Models.CompraModels

@{
    ViewBag.Title = "Otros Movimientos";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section css
{
    <link href="@Url.Content("~/Content/css/compra.css")" rel="stylesheet" />
}

@section featured
{
    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="row">
        <div id="Error" class="progress-bar progress-bar-striped active errorCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div id="Success" class="progress-bar progress-bar-striped active successCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Información de <strong>Otros Movimientos</strong></h3>
                    <ul class="panel-controls"></ul>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="col-md-3 control-label">Cantidad Total</label>
                            <div class="col-md-9 col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    @Html.TextBoxFor(model => model.Sucursal, new { id = "MermaSugerida", @class = "form-control", disabled = "disabled" })
                                </div>
                                @Html.ValidationMessageFor(model => model.CertZoosanitario)
                                <span class="help-block">Cantidad Total.</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-3 control-label">Subtotal</label>
                            <div class="col-md-9 col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    @Html.TextBoxFor(model => model.MermaPromedio, new { id = "MermaPromedio", @class = "form-control", disabled = "disabled" })
                                </div>
                                @Html.ValidationMessageFor(model => model.MermaPromedio)
                                <span class="help-block">Subtotal.</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!---->
                <div class="page-content-wrap">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- START DEFAULT DATATABLE -->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"></h3>
                                    <div class="panel-controls">
                                        <div class="col-md-6">
                                            <div class="btn-group derecha">
                                                <button type="button" class="btn btn-primary  btn-lg ">Agregar Renta de equipo</button>
                                                <button type="button" class="btn btn-primary dropdown-toggle  btn-lg " data-toggle="dropdown"><span class="caret"></span></button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a onclick="Renta('Vehiculo')">Vehículo</a></li>
                                                    <li><a onclick="Renta('Remolque')">Remolque</a></li>
                                                    <li><a onclick="Renta('Jaula')">Jaula</a></li>
                                                </ul>
                                            </div>

                                            @*<button class="btn btn-primary btn-lg derecha" onclick="NuevaRenta()">
                                                <i class="fa fa-plus"></i> Agregar Renta de equipo
                                            </button>*@
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-primary btn-lg izquieda" onclick="AbrirInventario()">
                                                <i class="fa fa-plus"></i> Abrir Inventario
                                            </button>
                                        </div>
                                        
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table datatable">
                                            <thead>
                                                <tr>
                                                    <th>Concepto</th>
                                                    <th>Cantidad</th>
                                                    <th>Precio unitario</th>
                                                    <th>Subtotal</th>
                                                    <th>Acción</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- END DEFAULT DATATABLE -->
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <input type="submit" value="Guardar y continuar" class="btn btn-primary pull-right">
                    <a href="@Url.Action("Ganado","Compra")" class="btn btn-danger"><i class="icon-prev"></i>Cancelar</a>
                </div>
            </div>

        </div>
    </div>
    <div id="ModalRenta" class="modal fade" role="dialog" style="display:none" aria-hidden="true">
        <div class="modal-dialog" id="ContenidoModalRenta">

        </div>
    </div>

<div id="ModalInventario" class="modal fade" role="dialog" style="display:none" aria-hidden="true">
    <div class="modal-dialog" id="ContenidoModalInventario">

    </div>
</div>

    <script>
        var message     = '@message';
        var typemessage = '@typemessage';
    </script>
}

@section script
{
    <script type="text/javascript" src="@Url.Content("~/Content/js/demo_tables.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/datatables/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>
    <!--FUNCIONES DE COMPRA JS-->
    <script type="text/javascript" src="@Url.Content("~/Content/js/compra.js")"></script>
    <script>
        jQuery(document).ready(function () {
            Mensaje(message, typemessage);


        });

        function NuevaRenta(opcion) {
            $.ajax({
                url: 'Renta',
                data : opcion: data,
                success: function (data) {
                    $('#ContenidoModalRenta').html(data);
                    $('#ModalRenta').modal({ backdrop: 'static', keyboard: false });
                }
            });
        }

        function AbrirInventario() {
            $.ajax({
                url: 'Inventario',
                success: function (data) {
                    $('#ContenidoModalInventario').html(data);
                    $('#ModalInventario').modal({ backdrop: 'static', keyboard: false });
                }
            });
        }
    </script>
}

