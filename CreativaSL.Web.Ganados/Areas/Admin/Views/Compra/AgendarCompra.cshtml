                                        <div class="col-md-6">
                                            <div class="controlError">
                                                <label class="col-md-2 control-label">Sucursal</label>
                                                <div class="col-md-10 col-xs-12">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><span class="fa fa-building-o"></span></span>
                                                        @Html.DropDownListFor(model => model.IDSucursal, new SelectList(Model.ListaSucursales, "IDSucursal", "NombreSucursal"), new { @class = "form-control select classSelect", data_live_search = "true", data_style = "form-control" })
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.IDSucursal)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="controlError col-md-6">
                                            <div class="controlError">
                                                <label class="col-md-2 control-label">Fecha programada</label>
                                                <div class="col-md-10 col-xs-12">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                        @Html.TextBoxFor(model => model.FechaHoraProgramada, "{0:dd/MM/yyyy}", new { id = "FechaProgramada", autocomplete = "off", @class = "form-control datepicker", @readonly = "readonly" })
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.FechaHoraProgramada)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <div class="controlError">
                                                <label class="col-md-2 control-label">Nombre del proveedor</label>
                                                <div class="col-md-10 col-xs-12">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                        @Html.DropDownListFor(model => model.IDProveedor, new SelectList(Model.ListaProveedores, "IDProveedor", "NombreRazonSocial"), new { @class = "form-control select classSelect", data_live_search = "true", data_style = "form-control" })
