                                                    @Html.ValidationMessageFor(model => model.IDProveedor)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="controlError">
                                                <label class="col-md-2 control-label">Lugares del proveedor</label>
                                                <div class="col-md-10 col-xs-12">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                        @Html.DropDownListFor(model => model.IDPLugarProveedor, new SelectList(Model.ListaLugaresProveedor, "id_lugar", "descripcion"), new { @class = "form-control select classSelect", data_live_search = "true", data_style = "form-control" })
