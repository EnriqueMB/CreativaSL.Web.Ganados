                                                    <div class="input-group">
                                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                        @Html.TextBoxFor(model => model.GanadosPactadoMachos, new { id = "GanadoPactadoMachos", @class = "form-control", placeholder = "Ingrese una cantidad de ganado Machos" })
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.GanadosPactadoMachos)
                                                </div>
                                            </div>
                                        </div>
