                                                    @Html.TextBoxFor(model => model.DocumentoPorCobrar.Impuestos, "{0:c2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
