@model CreativaSL.Web.Ganados.Models.CompraModels
@{
    ViewBag.Title = "Transaccion";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section css
{
    <!--FILEINPUT-->
    <link href="@Url.Content("~/Content/js/plugins/uploadFiles/fileinput.css")" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/select/1.2.5/css/select.bootstrap.min.css">
    <link href="@Url.Content("~/Content/js/plugins/uploadFiles/theme.css")" rel="stylesheet" />
    <!--CSS GENERAL-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/compra.css")" />
}
@section featured
{
    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div id="Error" class="progress-bar progress-bar-striped active errorCSL" style="display:none; width:100%">
        <h3></h3>
    </div>
    <div id="Success" class="progress-bar progress-bar-striped active successCSL" style="display:none; width:100%">
        <h3></h3>
    </div>
    <!--INICIA TABS-->
    <div class="panel panel-default tabs">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#docPorCobrar" aria-controls="docPorCobrar" role="tab" data-toggle="tab">Cobros</a></li>
            <li role="presentation" class="disabled"><a href="#docPorPagar" aria-controls="docPorPagar" role="tab" data-toggle="tab">Pagos</a></li>
            <li role="presentation" class="disabled"><a href="#impuesto" aria-controls="impuesto" role="tab" data-toggle="tab">Impuestos</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="docPorCobrar">
                <div class="col-md-12">
                    @{ Html.EnableClientValidation(false); }
                    @using (Html.BeginForm("AC_DetallesDocPorCobrar", "DocumentoXCobrar", FormMethod.Post, new { id = "frmCobro", @class = "form-horizontal", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.IDCompra)
                        @Html.HiddenFor(model => model.IDFlete)

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><strong>Cobros</strong></h3>
                                <ul class="panel-controls"></ul>
                            </div>
                            <div class="panel-body">
                                @Html.ValidationSummary(false, "Cheque los siguientes problemas:")
                                <div id="validation_summary_cobro" class="field_error "></div>
                                <br />
                                <div class="form-group">
                                    <div class="col-md-4 controlError">
                                        <label class="col-md-3 control-label">Pagos</label>
                                        <div class="col-md-9 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-building-o"></span></span>
                                                @Html.TextBoxFor(model => model.DocumentoPorCobrar.Pagos, "{0:f2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 controlError">
                                        <div class="controlError">
                                            <label class="col-md-3 control-label">Impuestos</label>
                                            <div class="col-md-9 col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                    @Html.TextBoxFor(model => model.DocumentoPorCobrar.Impuestos, "{0:f2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 controlError">
                                        <div class="controlError">
                                            <label class="col-md-3 control-label">Total</label>
                                            <div class="col-md-9 col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                    @Html.TextBoxFor(model => model.DocumentoPorCobrar.Total, "{0:f2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4 controlError">
                                        <label class="col-md-3 control-label">Impuestos retenidos</label>
                                        <div class="col-md-9 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-building-o"></span></span>
                                                @Html.TextBoxFor(model => model.DocumentoPorCobrar.Impuesto_retenido, "{0:f2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="controlError col-md-4">
                                        <div class="controlError">
                                            <label class="col-md-3 control-label">Impuestos trasladados</label>
                                            <div class="col-md-9 col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                    @Html.TextBoxFor(model => model.DocumentoPorCobrar.Impuesto_trasladado, "{0:f2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="controlError col-md-4">
                                        <div class="controlError">
                                            <label class="col-md-3 control-label">Total Impuestos</label>
                                            <div class="col-md-9 col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                    @Html.TextBoxFor(model => model.DocumentoPorCobrar.Impuestos, "{0:f2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <div class="controlError">
                                            <label class="col-md-3 control-label">Cambio</label>
                                            <div class="col-md-9 col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.TextBoxFor(model => model.DocumentoPorCobrar.Cambio, "{0:f2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="controlError">
                                            <label class="col-md-3 control-label">Pendiente</label>
                                            <div class="col-md-9 col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.TextBoxFor(model => model.DocumentoPorCobrar.Pendiente, "{0:f2}", new { autocomplete = "off", @class = "form-control", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="page-content-wrap">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <!-- START DEFAULT DATATABLE -->
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    <h3 class="panel-title"></h3>
                                                    <ul class="panel-controls">
                                                        <li><a id="btnAddGanado" class="btn btn-default btnCrear"><span class="fa fa-plus"></span> Agregar cobro </a></li>
                                                        @*<li><a id="btnListadoPrecio" class="btn btn-default btnCrear"><span class="fa fa-eye"></span> Ver listado de precios </a></li>*@
                                                        <li><a href="#" class="panel-collapse exsa"><span class="fa fa-angle-down"></span></a></li>
                                                        <li><a href="#" class="panel-fullscreen exsa"><span class="fa fa-expand"></span></a></li>
                                                    </ul>
                                                </div>
                                                <div class="panel-body">
                                                    <div class="table-responsive">
                                                        <table id="tbl_documentosPorCobrarDetalles" class="table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Tipo</th>
                                                                    <th>Producto/servicio</th>
                                                                    <th>Cantidad</th>
                                                                    <th>Precio unitario</th>
                                                                    <th>Subtotal</th>
                                                                    <th>Acción</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- END DEFAULT DATATABLE -->
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="panel-footer">
                                <a href="@Url.Action("Index", "Compra")" class="btn btn-danger"><i class="icon-prev"></i>Regresar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="docPorPagar">
                <div class="col-md-12">
                    @{ Html.EnableClientValidation(false); }
                    @using (Html.BeginForm("AC_Flete", "Compra", FormMethod.Post, new { id = "frmFlete", @class = "form-horizontal", autocomplete = "off" }))
                    {
                        @Html.HiddenFor(model => model.IDFlete);
                        @Html.HiddenFor(model => model.IDCompra);
                        @Html.AntiForgeryToken()

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Información del <strong>Flete</strong></h3>
                                <ul class="panel-controls"></ul>
                            </div>
                            <div class="panel-body">
                                @Html.ValidationSummary(false, "Cheque los siguientes problemas:")
                                <div id="validation_summary_flete" class="field_error "></div><br />
                                <div class="form-group">
                                    <div class="col-md-12 controlError">
                                        <label class="col-md-1 control-label">Linea fletera</label>
                                        <div class="col-md-11 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.DropDownListFor(model => model.IDEmpresa, new SelectList(Model.ListaEmpresas, "IDEmpresa", "RazonFiscal"), new { id = "Empresa_IDEmpresa", @class = "form-control select", data_live_search = "true", data_style = "form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.IDEmpresa)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6 controlError">
                                        <label class="col-md-2 control-label">Chofer</label>
                                        <div class="col-md-10 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.DropDownListFor(model => model.IDChofer, new SelectList(Model.ListaChoferes, "IDChofer", "Nombre"), new { @class = "form-control select", data_live_search = "true", data_style = "form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.IDChofer)
                                        </div>
                                    </div>

                                    <div class="col-md-6 controlError">
                                        <label class="col-md-2 control-label">Vehículo</label>
                                        <div class="col-md-10 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.DropDownListFor(model => model.IDVehiculo, new SelectList(Model.ListaVehiculos, "IDVehiculo", "nombreMarca", "nombreTipoVehiculo", 1), new { @class = "form-control select", data_live_search = "true", data_style = "form-control" })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.IDVehiculo)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6 controlError">
                                        <label class="col-md-2 control-label">Kilómetraje Inicial</label>
                                        <div class="col-md-10 col-xs-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                @Html.TextBoxFor(model => model.Flete.kmInicialVehiculo, new { id = "KmInicial", @class = "form-control", placeholder = "Introduzca el km. inicial del vehículo." })
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Flete.kmInicialVehiculo)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <input type="submit" value="Guardar" class="btn btn-primary pull-right">
                                <a href="@Url.Action("Index", "Compra")" class="btn btn-danger"><i class="icon-prev"></i>Regresar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="impuesto">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><strong>Documentación</strong> para la compra</h3>
                            <ul class="panel-controls"></ul>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <!-- START DEFAULT DATATABLE -->
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title"></h3>
                                            <ul class="panel-controls">
                                                <li><a id="btnAddDocumento" class="btn btn-default btnCrear"><span class="fa fa-plus"></span> Nuevo Documento</a></li>
                                                <li><a href="#" class="panel-collapse exsa"><span class="fa fa-angle-down"></span></a></li>
                                                <li><a href="#" class="panel-fullscreen exsa"><span class="fa fa-expand"></span></a></li>
                                            </ul>
                                        </div>
                                        <div class="panel-body">
                                            <div class="col-md-12">
                                                <h3></h3>
                                                <div class="table-responsive">
                                                    <table id="tblDocumentos" class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>Tipo de documento</th>
                                                                <th>Producto</th>
                                                                <th>Imagen</th>
                                                                <th>Acción</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody></tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- END DEFAULT DATATABLE -->
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <a href="@Url.Action("Index", "Compra")" class="btn btn-danger"><i class="icon-prev"></i>Regresar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--TERMINA TABS-->
    <div id="Modal" class="modal fade" role="dialog" style="display:none" aria-hidden="true">
        <div class="modal-dialog modal-lg" id="ContenidoModal">

        </div>
    </div>
    <div class="message-box animated fadeIn" data-sound="alert" id="mb-delete-">
        <div class="mb-container">
            <div class="mb-middle">
                <div class="mb-title"><span class="fa fa-times"></span> Eliminar <strong>Registro</strong> ?</div>
                <div class="mb-content">
                    <p>¿Seguro que quieres eliminar este documento?</p>
                    <p>Presione "sí" si está seguro.</p>
                </div>
                <div class="mb-footer">
                    <div class="pull-right">
                        <button class="btn btn-success btn-lg mb-control-yes">Si</button>
                        <button class="btn btn-default btn-lg mb-control-close">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var message     = '@message';
        var typemessage = '@typemessage';
    </script>
}

@section script
{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    <script src="@Url.Content("~/Content/js/validaciones/additionals.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/demo_tables.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/datatables/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/compraTransacciones.js")"></script>
    <!--FILEINPUT-->
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/uploadFiles/fileinput.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/uploadFiles/es.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/uploadFiles/explorer-fa/theme.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="@Url.Content("~/Content/js/plugins/uploadFiles/theme.js")" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            Mensaje(message, typemessage);
            CompraTransaccion.init();
        });
    </script>
}

