                var dataURL = canvas.toDataURL();
               //imprime base64 de imagen
                console.log(dataURL);
            });
            


            @{
            string color = "";
            int switchcase= 0;

                  <text>  var a =[</text>
                foreach (var item in Model.listaCompra) {
                    switchcase = @item.Estatus;
                     <text>

          {
        title: '@item.IDProveedor',
              start: ' @item.FechaHoraProgramada.ToString("yyyy-MM-dd")',
              @*//end: '@DateTime.Now.ToString("yyyy-MM-dd")',*@
              @switch (switchcase)
              {
                  case 1:
                      color = "#6699ff";
                      break;
                  case 2:
                      color = "#ff5533";
                      break;
                  case 3:
                      color = "#BBFF13";
                      break;
                  case 4:
                      color = "#BB8866";
                      break;
                  default:
                      color = "#ffcc00";

                      break;
              }
              color: '@color',
              description:'<p> <strong>Estatus : </strong> @item.estatusDesc</p>'+'<p><strong>Guia de transito : </strong> @item.GuiaTransito</p>'+
                  '<p><strong>Hembras pactados : </strong>@item.GanadosPactadoHembras</p>' + '<p><strong>Machos pactados: </strong>@item.GanadosPactadoMachos</p>'

          },


            </text>
                }
                <text>]</text>
            }

            $('#calendar').fullCalendar({
                lang: 'es',
                fixedWeekCount: false,
                height: 600,
                firstDay: 1,
                handleWindowResize: true,
                allDaySlot: false,
                slotLabelFormat: 'H',
                eventOverlap: false,
                displayEventTime: true,
                events: a,
                eventClick: function (event, jsEvent, view) {
                    $('#modalTitle').html(event.title);
                    $('#modalBody').html(event.description);
                    //$('#eventUrl').attr('href', event.url);
                    $('#fullCalModal').modal();
                },

            });
        });
    </script>
