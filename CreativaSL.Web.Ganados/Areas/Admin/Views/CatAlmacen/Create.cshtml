@model CreativaSL.Web.Ganados.Models.CatAlmacenModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured{

    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="row">
        <div id="Error" class="progress-bar progress-bar-striped active errorCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div id="Success" class="progress-bar progress-bar-striped active successCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div class="col-md-12">
            @*<form class="form-horizontal">*@
            @{ Html.EnableClientValidation(false); }
            @using (Html.BeginForm("Create", "CatAlmacen", FormMethod.Post, new {id="form-catalm", @class = "form-horizontal", autocomplete = "off" }))
            {
               
              @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "Hay errores en la captura de información:", new { @class = "text-danger" }) //Server
                <div id="validation_summary" class="field_error "></div> //JS

                @Html.HiddenFor(model => model.IDAlmacen)
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Información</strong> Almacén</h3>
                        <ul class="panel-controls">
                            @*<li><a href="#" class="panel-remove exsa"><span class="fa fa-times"></span></a></li>*@
                        </ul>
                    </div>
                    <div class="panel-body">
                      <div class="col-md-12">
                          
                              <div class="col-md-6">
                                  <div class="form-group">
                                      <label class="col-md-12 col-xs-12 control-label text-center">Sucursal</label>
                                      <div class="col-md-12 col-xs-12">
                                          @Html.DropDownListFor(model => model.IDSucursal, new SelectList(Model.ListaSucursales, "IDSucursal", "NombreSucursal"), new { id = "IDSucursal", @class = "form-control select" })
                                          @Html.ValidationMessageFor(model => model.IDSucursal)
                                          <span class="help-block">Seleccione la sucursal</span>
                                      </div>
                                  </div>
                          </div>
                          
                              <div class="col-md-6">
                                  <div class="form-group">
                                      <label class="col-md-12 control-label text-center">Clave del Almacén</label>
                                      <div class="col-md-12 col-xs-12">
                                          <div class="input-group">
                                              <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                              @Html.TextBoxFor(model => model.ClaveAlmacen, new { id = "ClaveAlmacen", @class = "form-control" })
                                          </div>
                                          @Html.ValidationMessageFor(model => model.ClaveAlmacen)
                                          <span class="help-block">Clave del Almacén</span>
                                      </div>
                                  </div>
                          </div>
                         
                              <div class="col-md-6">
                                  <div class="form-group">
                                      <label class="col-md-12 control-label text-center">Descripción</label>
                                      <div class="col-md-12 col-xs-12">
                                          <div class="input-group">
                                              <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                              @Html.TextBoxFor(model => model.Descripcion, new { id = "Descripcion", @class = "form-control" })
                                          </div>
                                          @Html.ValidationMessageFor(model => model.Descripcion)
                                          <span class="help-block">Ingrese la descripción del producto</span>
                                      </div>
                                  </div>
                          </div>
                         
                              <div class="col-md-6">
                                  <div class="form-group">
                                      <label class="col-md-12 control-label text-center">Nombre</label>
                                      <div class="col-md-12 col-xs-12">
                                          <div class="input-group">
                                              <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                              @Html.TextBoxFor(model => model.nombre, new { id = "nombre", @class = "form-control" })
                                          </div>
                                          @Html.ValidationMessageFor(model => model.nombre)
                                          <span class="help-block">Ingrese la descripción del producto</span>
                                      </div>
                                  </div>


                          </div>
                      </div>


                    </div>
                    <div class="panel-footer">
                        <input type="submit" value="Guardar" class="btn btn-primary pull-right">
                        <a href="@Url.Action("Index","CatAlmacen")" class="btn btn-danger"><i class="icon-prev"></i>Cancelar</a>
                    </div>
                </div>
                @*</form>*@
            }
        </div>
    </div>
    <script>
        var message = '@message';
        var typemessage = '@typemessage';
    </script>
}
@section script{
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-file-input.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-select.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/tagsinput/jquery.tagsinput.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/demo_tables.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/plugins/jquery-validation/jquery.validate.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/validaciones/additionals.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/CalAlmacen.js")"></script>
    <script>
    jQuery(document).ready(function () {
        
        Mensaje(message, typemessage);
        CatAlmacen.init();

    });
    </script>
}




