@model CreativaSL.Web.Ganados.ViewModels.ServiciosMantenimientoViewModels
@{
    ViewBag.Title = "CreateV";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured{
    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="row">
        <div id="Error" class="progress-bar progress-bar-striped active errorCSL" style="display:none; width:100%">
            <h3></h3>
        </div>
        <div id="Success" class="progress-bar progress-bar-striped active successCSL" style="display:none; width:100%">
            <h3></h3>
        </div>

        <div class="col-md-12">
            @{ Html.EnableClientValidation(false); }
            @using (Html.BeginForm("CreateV", "Mantenimiento", FormMethod.Post, new { @class = "form-horizontal", id = "form-ec", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                <div class="field_error" id="validation_summary"></div>
                @Html.ValidationSummary(false, "Hay errores en la captura de información:", new { @class = "text-danger" }) //Server
                                                    <div class="panel panel-default">
                                                        <div class="panel-heading">
                                                            <h3 class="panel-title"><strong>Entrega </strong> de combustible </h3>
                                                            <ul class="panel-controls"></ul>
                                                        </div>
                                                        <div class="panel-body">
                                                            <div class="row">

                                                                @Html.HiddenFor(model => model.IDServicio)
                                                                @*@Html.HiddenFor(model => model.KMInicial)
                                                                    @Html.HiddenFor(model => model.Litros)*@

                                                                <div class="form-group">
                                                                    <label class="col-md-2 col-xs-12 control-label"><span></span> Sucursal</label>
                                                                    <div class="col-md-6  col-xs-12">
                                                                       
                                                                          
                                                                            @Html.DropDownListFor(model => model.IDSucursal, new SelectList(Model.ListaSucursales, "IDSucursal", "NombreSucursal"), new { id = "IDSucursal", @class = "form-control select", data_live_search = "true" })
                                                                            @Html.ValidationMessageFor(model => model.IDSucursal)
                                                                        
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label class="col-md-2 col-xs-12 control-label"><span></span> Fecha </label>
                                                                    <div class="col-md-6 col-xs-12">
                                                                        <div class="input-group">
                                                                            <div class="input-group">
                                                                                <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                                                                @Html.TextBoxFor(model => model.Fecha, "{0:dd/MM/yyyy}", new { id = "Fecha", @class = "form-control datepicker", @readonly = "readonly" })
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                

                                                                

                                                                <div class="form-group">
                                                                    <label class="col-md-2 col-xs-12 control-label"><span></span> Importe Total</label>
                                                                    <div class="col-md-6 col-xs-12">
                                                                        <div class="input-group">
                                                                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                                            @Html.TextBoxFor(model => model.ImporteTotal, new { id = "ImporteTotal", @class = "form-control", placeholder = "Ingrese el kilometraje final" })
                                                                            
                                                                        </div>
                                                                        @Html.ValidationMessageFor(model => model.ImporteTotal)
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label class="col-md-2 col-xs-12 control-label"><span></span> observaciones</label>
                                                                    <div class="col-md-6 col-xs-12">
                                                                        <div class="input-group">
                                                                            <span class="input-group-addon"></span>
                                                                            @*<label class="form-control" id="Rend">@Model.Rendimiento</label>*@
                                                                            @Html.TextAreaFor(model => model.Observaciones, new { id = "Observaciones", @class = "form-control" })

                                                                            

                                                                        </div>
                                                                        @*<input type="text"  name="rnd" id="Rendimiento"/>*@

                                                                    </div>
                                                                </div>

                                                            </div>


                                                        </div>
                                                        <div class="panel-footer">
                                                            <input type="submit" value="Guardar" class="btn btn-primary pull-right">
                                                            <a href="@Url.Action("Index","EntregaCombustible")" class="btn btn-danger"><i class="icon-prev"></i>Cancelar</a>
                                                        </div>
                                                    </div>
            }
        </div>
    </div>
    <script>
            var message = '@message';
            var typemessage = '@typemessage';
    </script>
}
@section script{
<script type="text/javascript" src="@Url.Content("~/Content/js/demo_tables.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/plugins/datatables/jquery.dataTables.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/plugins/bootstrap/bootstrap-select.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/mensajeDeError.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/plugins/jquery-validation/jquery.validate.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/validaciones/additionals.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/rendimiento.js")"></script>
    <script>
        jQuery(document).ready(function () {
            //var rendimiento = (($('#KMInicial').text() - $('#KMFinal').val()) / $('#Litros').text());
            //$('#Rend').text(rendimiento);
           
            Mensaje(message, typemessage);
            Rendimiento.init();
        });
    </script>
}

